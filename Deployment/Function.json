{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Storage Account Name": {
      "type": "string"
    },
    "App Suffix": {
      "type": "string"
    },
    "App Insight Location": {
      "type": "string",
      "allowedValues": [
        "eastus",
        "westus2",
        "southcentralus",
        "southeastasia",
        "northeurope",
        "westeurope"
      ]
    }
  },
  "variables": {
    "Storage Account Id": "[resourceId('Microsoft.Storage/storageAccounts', parameters('Storage Account Name'))]",
    "Insight Name": "[concat('pas-api-AppInsight', parameters('App Suffix'))]",
    "Plan Name": "[concat('pas-api-Plan', parameters('App Suffix'))]",
    "Function Name": "[concat('pas-api', parameters('App Suffix'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-10-01",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "name": "[parameters('Storage Account Name')]",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "tags": {},
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "apiVersion": "2015-05-01",
      "type": "microsoft.insights/components",
      "location": "[parameters('App Insight Location')]",
      "dependsOn": [],
      "name": "[variables('Insight Name')]",
      "kind": "other",
      "tags": {},
      "scale": null,
      "properties": {
        "ApplicationId": "[variables('Insight Name')]"
      }
    },
    {
      "apiVersion": "2016-09-01",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "name": "[variables('Plan Name')]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic",
        "size": "Y1",
        "family": "Y",
        "capacity": 0
      },
      "kind": "functionapp",
      "scale": null,
      "properties": {},
      "dependsOn": []
    },
    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "name": "[variables('Function Name')]",
      "kind": "functionapp",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('Plan Name'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('Storage Account Name'))]",
        "[resourceId('microsoft.insights/components', variables('Insight Name'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('Plan Name'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components', variables('Insight Name'))).InstrumentationKey]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('Storage Account Name'), ';AccountKey=', listKeys(variables('Storage Account Id'), '2017-10-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('Storage Account Name'), ';AccountKey=', listKeys(variables('Storage Account Id'), '2017-10-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(variables('Function Name'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "beta"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "6.5.0"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "my-output": {
      "type": "string",
      "value": "Everything good"
    }
  }
}